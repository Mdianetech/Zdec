rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour la collection projects
    match /projects/{projectId} {
      // Permettre la lecture à tous
      allow read: if true;
      
      // Permettre l'écriture à tous (vous pouvez restreindre plus tard)
      allow write: if true;
      
      // Règles pour la sous-collection content
      match /content/{contentId} {
        allow read, write: if true;
      }
    }
    
    // Règles pour les autres collections (team_members, etc.)
    match /{document=**} {
      allow read, write: if true;
    }
  }
}